{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Output */
    "outDir": "./dist",
    "rootDir": "./scripts",
    
    /* Module */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    
    /* Node.js specific */
    "types": ["node"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", "dist", "src"]
}

